<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners
                android:radius="20dp"/>
            <padding
                android:bottom="1dp"
                android:left="10dp"
                android:right="10dp"
                android:top="1dp"/>
            <solid android:color="@color/colorAccentDark"/>
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:color="@color/white"
                android:width="3dp"/>
            <corners
                android:radius="20dp"/>
            <padding
                android:bottom="1dp"
                android:left="10dp"
                android:right="10dp"
                android:top="1dp"/>
            <solid android:color="@color/colorAccent"/>
        </shape>
    </item>
</selector>